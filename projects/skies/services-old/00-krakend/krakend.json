{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "SKIES - API Gateway",
  "extra_config": {
    "security/cors": {
      "allow_origins": [
        "*"
      ],
      "expose_headers": [
        "Content-Length"
      ],
      "max_age": "12h",
      "allow_methods": [
        "GET",
        "HEAD",
        "POST",
        "PUT",
        "DELETE",
        "OPTIONS",
        "PATCH"
      ],
      "allow_credentials": true,
      "allow_headers": [
        "X-Samurai-Client",
        "X-Samurai-Secret",
        "X-Samurai-Time",
        "Accept",
        "Content-Type",
        "Authorization"
      ]
    },
    "security/bot-detector": {
      "empty_user_agent_is_bot": true,
      "cache_size": 10000
    },
    "telemetry/logstash": {
      "enabled": false
    }
  },
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "port": 80,
  "debug_endpoint": true,
  "echo_endpoint": true,
  "endpoints": []
}